<h1>Login</h1>

<div class= "login">

<%= form_tag(access_attempt_path, :method => :post) do %>
    <table>
        <tr>
            <td><%= label_tag(:name) %></td>
            <td><%= text_field_tag(:name, params[:name]) %></td>
        </tr>
        
        <tr>
            <td><%= label_tag(:password) %></td>
            <td><%= password_field_tag(:password) %></td>
        </tr>
        
        <tr>
            <td><%= submit_tag("Log In")%></td>
        </tr>
    
    
    </table>
    
    <% end %>

</div>